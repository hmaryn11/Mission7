@{
    ViewData["Title"] = "Movie Entry";
}
@model Mission6.Models.EntryResponse;

    <div class="text-xl-center">
        <form method="post">

            <h1>Enter a New Movie</h1>
            <h3>Include the following information about the movie itself. </h3>
            <h5>(Not all fields are required).</h5>

            <div asp-validation-summary="All"></div>
         
            <input asp-for="MovieId" type="hidden" />

            <label asp-for="movieTitle">Title of Movie:</label>
            <input class="input-group-text" style="margin:auto" asp-for="movieTitle" />

            <label asp-for="categoryID">Movie Category:</label>
            <select class="input-group-text" style="margin:auto" asp-for="categoryID">
                <option value="">Select A Category</option>
                @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.categoryID">@c.categoryName</option>
            }
            </select>
            
            <label asp-for="Year">Year:</label>
            <input class="input-group-text" style="margin:auto" asp-for="Year" />
            
            <label asp-for="directorName">Director's Name:</label>
            <input class="input-group-text" style="margin:auto" asp-for="directorName" />

            <label asp-for="Rating">Movie Rating:</label>
            <select class="input-group-text" style="margin:auto" asp-for="Rating">
                <option value=""> </option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>

            <label asp-for="Edited">Edited:</label>
            <select class="input-group-text" style="margin:auto" asp-for="Edited">
                <option value=""> </option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>

            <label asp-for="lentTo">Lent To:</label>
            <input class="input-group-text" style="margin:auto" asp-for="lentTo" />

            <label asp-for="Notes">Notes:</label>
            <input class="input-group-text" style="margin:auto" asp-for="Notes" />
            <br />

            <input class="btn btn-primary" type="submit" value="Submit" />

        </form>
    </div>